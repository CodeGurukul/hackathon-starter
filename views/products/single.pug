extends ../layout

block content
  .pb-2.mt-2.mb-4.border-bottom
    h3 Product Page
  .contianer
    .row
      .col-md-6
        h5 Name:
      .col-md-6
        p #{product.name}
    .row
      .col-md-6
        h5 Category:
      .col-md-6
        p #{product.category}
    .row
      .col-md-6
        h5 Description:
      .col-md-6
        p #{product.description}
    .row
      .col-md-6
        h5 Cost:
      .col-md-6
        p #{product.cost}
    .row
      .col-md-6
        h5 Action:
      .col-md-6
        a.btn.btn-sm.btn-info(href="/products/"+product._id+"/edit") Edit
        a.btn.btn-sm.btn-danger(href="/products/"+product._id+"/delete") Delete